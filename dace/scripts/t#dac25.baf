// ---------------------------------------------
// Dace ToB Script
// ---------------------------------------------
// Joining in ToB
IF
    InParty(Myself)
    See(Player1)
    !Dead("T#Dace")
    !StateCheck(Myself,CD_STATE_NOTVALID)
    !StateCheck(Player1,CD_STATE_NOTVALID)
    Dead("Illasera")
    !See([ENEMY])
    AreaCheck("AR4000")
    Global("T#DaceToBIntroTalk","GLOBAL",1)
THEN
  RESPONSE #100
    IncrementGlobal("T#DaceToBIntroTalk","GLOBAL",1)
END

IF
    InParty(Myself)
    See(Player1)
    !Dead("T#Dace")
    !See([ENEMY])
    Global("T#DaceToBIntroTalk","GLOBAL",2)
THEN
  RESPONSE #100
    MoveToObject(Player1)
    Dialogue(Player1)
END

